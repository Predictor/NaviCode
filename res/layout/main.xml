<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<view class="it.sephiroth.android.library.imagezoom.ImageViewTouch"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mapView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:src="@drawable/title_screen"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleView"
            android:src="@drawable/title_screen"
            android:layout_toRightOf="@+id/imageButton" android:layout_alignTop="@+id/mapView"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton" android:layout_alignLeft="@+id/mapView"
            android:layout_alignTop="@+id/mapView" android:src="@drawable/scan_button" android:onClick="scanNow"/>
</RelativeLayout>